!!! 5
%html
  %head
    %title 
      = yield(:title)
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      = flash_messages
      %div{:class => 'wrapper clearfix'}
        - if user_authorized?
          = render :template => 'users/header'
        - else
          = render :template => 'layouts/quiz'
      .content
        %div{:class => 'wrapper clearfix'}
          = yield