#registration
  %div{:class => 'text dark'}
    = form_for @user, url: user_path do |form|
      - if @user.errors.any?
        #error_explanation
          %h2
            = pluralize(@user.errors.count, "error") 
            prohibited this user from being saved:
          %ul
            - @user.errors.full_messages.each do |msg|
              %li
                = msg
      = form.text_field :login, placeholder: 'Логин'
      %br
      = form.password_field :password, placeholder: 'Пароль'
      %br
      = form.password_field :password_confirmation, placeholder: 'Подтверждение пароля'
      %br
      %a{id: :register_button, class: 'button green',onclick: "$('#new_user').submit()"} 
        Регистрация